{
  "name": "diygw-electron",
  "private": true,
  "main": "dist_electron/main.js",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn tsc:electron && concurrently vite \" yarn electron .\"  ",
    "build": "yarn tsc:electron && vue-tsc --noEmit && vite build && electron-builder",
    "tsc:electron": "tsc -p electron --outDir dist_electron",
    "release": "yarn tsc:electron && vue-tsc --noEmit && vite build && electron-builder"
  },
  "build": {
    "appId": "com.diygw.electron",
    "productName": "DIY可视化",
    "copyright": "Copyright © 2022 diygw",
    "directories": {
      "output": "dist_electron",
      "buildResources": "public"
    },
    "files": [
      "dist_electron/**/*",
      "public/**/*",
      "dist/**/*"
    ],
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "DIYGW可视化",
      "perMachine": true,
      "oneClick": false
    },
    "mac": {
      "icon": "public/icon.icns",
      "artifactName": "diygw-macos-${version}.${ext}"
    },
    "win": {
      "icon": "public/icon.ico",
      "artifactName": "diygw-windows-${version}.${ext}"
    },
    "linux": {
      "icon": "public/icon.icns",
      "artifactName": "diygw-linux-${version}.${ext}"
    }
  },
  "dependencies": {
    "electron-dl": "^3.3.1",
    "electron-json-config": "^2.0.0",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "electron-updater": "^5.2.1",
    "@types/electron-devtools-installer": "^2.2.2",
    "@vitejs/plugin-vue": "^2.3.3",
    "concurrently": "^7.2.2",
    "electron": "^19.0.8",
    "electron-builder": "^23.1.0",
    "electron-devtools-installer": "^3.2.0",
    "typescript": "^4.5.4",
    "vite": "^2.9.9",
    "vite-plugin-electron": "^0.7.5",
    "vue-tsc": "^0.34.7"
  }
}
